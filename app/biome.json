{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["components/ui/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    },
    "ignore": ["components/ui/*"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "ignore": ["components/ui/*"],
          "options": {
            "identifierOrder": "natural",
            "ignore": ["components/ui/*"]
          }
        }
      }
    }
  }
}
